<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import fr.umontpellier.iut.vues.VueJoueurCourant?>
<?import fr.umontpellier.iut.vues.VuePlateau?>
<!--<?import fr.umontpellier.iut.vues.VueAutresJoueurs?>-->

<fx:root alignment="BOTTOM_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="432.0" prefWidth="600.0" type="HBox" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane fx:id="borderPane" minHeight="0" style="-fx-background-color: white; -fx-border-color: black;" HBox.hgrow="ALWAYS">
         <center>
            <Pane fx:id="conteneurPlateau" style="-fx-background-color: green; -fx-border-color: black;">
               <children>
                  <VuePlateau fx:id="plateau"/>
               </children>
            </Pane>
         </center>
         <left>
            <VBox fx:id="conteneurAutresJoueurs" alignment="BOTTOM_LEFT" style="-fx-background-color: blue; -fx-border-color: black;" BorderPane.alignment="CENTER">
               <children>
                  <VBox fx:id="destinationsInitiales" prefHeight="200.0" prefWidth="100.0" />
               </children>
            </VBox>
         </left>
         <bottom>
            <VBox fx:id="conteneurJoueurCourant" alignment="CENTER_LEFT" style="-fx-background-color: pink; -fx-border-color: black;" BorderPane.alignment="BOTTOM_CENTER">
               <children>
                  <Label fx:id="instructions" style="-fx-background-color: white; -fx-background-radius: 5;">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding></Label>
                  <VueJoueurCourant fx:id="vueJoueurCourant"/>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
      <VBox fx:id="conteneurPioches" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: red; -fx-border-color: black;">
         <children>
            <ImageView fx:id="piocheCarte" onMouseClicked="#piocherCarte" pickOnBounds="true" preserveRatio="true" visible="false">
               <image>
                  <Image url="@../images/cartesWagons/carte-wagon.png" />
               </image>
            </ImageView>
            <VBox fx:id="piocheVisible" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="100.0" />
            <ImageView fx:id="piocheDestination" onMouseClicked="#piocherDestination" pickOnBounds="true" preserveRatio="true" visible="false">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
               <image>
                  <Image url="@../images/missions/eu_TicketBack.png" />
               </image>
            </ImageView>
            <Button fx:id="boutonPasser" mnemonicParsing="false" onMouseClicked="#passer" prefHeight="42.0" prefWidth="94.0" text="Passer">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</fx:root>
